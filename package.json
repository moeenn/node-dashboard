{
  "name": "node-dashboard",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "css:dev": "npx @tailwindcss/cli -i ./public/css/styles.in.css -o ./public/css/styles.css --watch",
    "css:build": "npx @tailwindcss/cli -i ./public/css/styles.in.css -o ./public/css/styles.css --minify",
    "lint": "npx eslint ./src/",
    "fmt": "npx prettier --write 'src/**/*.{ts,tsx}'",
    "check": "npm run fmt && npm run lint"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 4,
    "trailingComma": "all"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@tailwindcss/vite": "^4.1.11",
    "hono": "^4.8.4",
    "pino": "^9.7.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4"
  }
}